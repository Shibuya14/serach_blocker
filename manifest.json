{
    "manifest_version": 3,
    "name": "Search Blocker",
    "version": "1.0",
    "description": "Extension to block searches by arbitrary keywords",
    "permissions": ["storage", "scripting"],
    "host_permissions": ["*://www.google.com/*"],
    "options_page": "options.html",
    "content_scripts": [
    {
        "matches": ["*://www.google.com/search*"],
        "js": ["js/content.js"]
    }
    ],
    "icons": {
        "16": "img/icon-16.png",
        "32": "img/icon-32.png",
        "48": "img/icon-48.png",
        "128": "img/icon-128.png"
    }
}
